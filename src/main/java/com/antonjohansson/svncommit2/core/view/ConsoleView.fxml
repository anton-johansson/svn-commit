<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.antonjohansson.svncommit2.core.view.ConsoleView">
	<children>
		<TextArea fx:id="console" editable="false">
			<font>
				<Font name="Ubuntu Mono" size="14" />
			</font>
		</TextArea>
		<AnchorPane>
			<children>
				<ImageView fx:id="icon" AnchorPane.rightAnchor="28.0" AnchorPane.bottomAnchor="26.0" />
			</children>
		</AnchorPane>
	</children>
</StackPane>